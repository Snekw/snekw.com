{
  "name": "snekw.com",
  "version": "0.4.0-rc",
  "repository": "https://github.com/Snekw/snekw.com",
  "license": "GPL-3.0",
  "scripts": {
    "bsync": "browser-sync start --proxy \"dev.local:3000\" --files \"src/static/css/*.css\"",
    "scss": "scss src/scss/main.scss src/static/css/main.css --style expanded",
    "scss:w": "scss --watch src/scss:src/static/css --style expanded",
    "build": "node tasks/build.js",
    "copyDevConfig": "node tasks/copyDevConfigToDist.js",
    "test": "cross-env NODE_ENV=test mocha --recursive ./test/spec --exit",
    "check-coverage": "nyc --reporter=html --all npm test",
    "coverage": "nyc report --reporter=text-lcov"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "coverage/**",
      "test/**",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "**/node_modules/**",
      "src/config/**",
      "src/config-example/**",
      "src/static/**/third-party/**"
    ]
  },
  "dependencies": {
    "autoprefixer": "^8.2.0",
    "browser-sync": "^2.23.5",
    "clean-css": "^4.1.11",
    "commonmark": "^0.28.1",
    "critical": "^1.2.1",
    "cross-env": "^5.1.4",
    "css": "^2.2.1",
    "node-sass": "^4.8.3",
    "postcss": "^6.0.21",
    "prismjs": "^1.13.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-semistandard": "^12.0.1",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^4.1.0",
    "nyc": "^11.6.0",
    "proxyquire": "^1.8.0",
    "sinon": "^4.4.9"
  }
}
