{
  "name": "snekw.com",
  "version": "0.4.0-rc",
  "repository": "https://github.com/Snekw/snekw.com",
  "license": "GPL-3.0",
  "scripts": {
    "bsync": "browser-sync start --proxy \"dev.local:3000\" --files \"src/static/css/*.css\"",
    "scss": "scss src/scss/main.scss src/static/css/main.css --style expanded",
    "scss:w": "scss --watch src/scss:src/static/css --style expanded",
    "build": "node tasks/build.js",
    "watch": "node tasks/watch.js ./src/clientJs",
    "copyDevConfig": "node tasks/copyDevConfigToDist.js",
    "test": "cross-env NODE_ENV=test mocha --recursive ./test/spec --exit",
    "check-coverage": "nyc --reporter=html --all npm test",
    "coverage": "nyc report --reporter=text-lcov"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "coverage/**",
      "test/**",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__/**",
      "**/node_modules/**",
      "src/config/**",
      "src/config-example/**",
      "src/static/**/third-party/**"
    ]
  },
  "dependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "clean-css": "^4.1.11",
    "commonmark": "^0.28.1",
    "css": "^2.2.3",
    "node-sass": "^4.9.0",
    "postcss": "^6.0.22",
    "prismjs": "^1.15.0",
    "rollup": "^0.62.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "uglify-js": "^3.3.23"
  },
  "devDependencies": {
    "browser-sync": "^2.24.5",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-semistandard": "^12.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "mocha": "^5.1.1",
    "nyc": "^11.7.1",
    "proxyquire": "^2.0.1",
    "sinon": "^5.0.2"
  }
}
