{{#>layout}}
  {{bad}}
  <form action="/project/{{#if isEdit}}edit{{else}}new{{/if}}" method="post">
    <div>{{>markdownEditor editorDefault=project.rawBody}}</div>
    <div class="container">
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <input type="hidden" name="postedById" value="{{user.id}}">
      <input type="hidden" name="postedByName" value="{{user.username}}">
      {{#if isEdit}}
        <input type="hidden" name="projectId" value="{{project._id}}">
      {{/if}}
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="{{project.title}}"><br>
      <label for="indexImg">Index img url:</label>
      <input type="text" id="indexImg" name="indexImg" value="{{project.indexImageUrl}}"><br>
      <label for="indexImgAlt">Index img alt text:</label>
      <input type="text" id="indexImgAlt" name="indexImgAlt" value="{{project.indexImageAlt}}"><br>
      <label for="brief">Brief:</label>
      <textarea id="brief" name="brief">{{project.brief}}</textarea><br>
      <label for="public">Public</label>
      <input type="checkbox" id="public" name="public" value="true" {{#if project.public}}checked{{/if}}><br>
      <input type="submit">
    </div>
  </form>
{{/layout}}
