{{#>adminLayout}}
  {{#*inline "admin"}}
    {{#each articles}}
      {{>adminArticle}}
    {{/each}}
    <div id="multi-edit" class="container border bottom-dock flex-wrapper hide">
      <div class="hide" id="_csrf">{{csrfToken}}</div>
      <div class="flex">Selected <span id="nSelected"></span> items.
        <button id="selectAll" class="flex-left">Select All</button>
        <button id="deselectAll" class="flex-left">Deselect All</button>
      </div>
      <select class="flex-right" id="public" name="public" autocomplete="off">
        <option value="0" {{#if_eq article.public 0}}selected="selected"{{/if_eq}}>Private</option>
        <option value="1" {{#if_eq article.public 1}}selected="selected"{{/if_eq}}>Public</option>
        <option value="2" {{#if_eq article.public 2}}selected="selected"{{/if_eq}}>Link only</option>
      </select>
      <label for="updatePostedAt">Update publication time:</label>
      <input type="checkbox" id="updatePostedAt"/>
      <button id="apply-public-state" class="flex-right">Apply</button>
    </div>
  {{/inline}}
{{/adminLayout}}